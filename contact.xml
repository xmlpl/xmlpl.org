<body xmlns:ws="http://www.xmlpl.org/website">
  <h1>Email</h1>
  <ws:email address="licensing@xmlpl.org"/><br/>
  <ws:email address="support@xmlpl.org"/><br/>
  <ws:email address="info@xmlpl.org"/><br/>
  <ws:email address="bugs@xmlpl.org"/><br/>

  <h1>Mailing List</h1>
  <ws:email address="xmlpl-general@lists.sourceforge.net"/><br/><br/>
  <form method="post"
    action="http://lists.sourceforge.net/lists/subscribe/xmlpl-general">
    <table>
      <tr>
        <td>Your Email:</td>
        <td><input type="text" name="email" size="30"/></td>
      </tr>
      <tr>
        <td>Pick a password:</td>
        <td><input type="Password" name="pw" size="15"/></td>
      </tr>
      <tr>
        <td>Reenter password to confirm:</td>
        <td><input type="Password" name="pw-conf" size="15"/></td>
      </tr>
    </table>
    <input type="Submit" name="email-button" value="Subscribe"/>
  </form>

  <h1>Message</h1>
  <form method="post" action="${top}/sendmail.php">
    <input type="hidden" name="myemail" value="message@xmlpl.org"/>
    <table>
      <tr>
        <td>Your Name:</td>
        <td><input type="text" name="visitor" size="45"/></td>
      </tr>
      <tr>
        <td>Your Email:</td>
        <td><input type="text" name="visitormail" size="45"/></td>
      </tr>
      <tr>
        <td>Subject:</td>
        <td><input type="text" name="subject" size="45"/></td>
      </tr>
    </table>
    <div>Message:</div>
    <textarea name="msg" rows="8" cols="45" style="font-size:12pt"> </textarea>
    <br/>
    <input class="submit" type="submit" value="Send"/>
  </form>
</body>
